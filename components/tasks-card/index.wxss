.tasks-card {
  box-sizing: border-box;
  font-size: 24rpx;
  border-radius: 0 0 16rpx 16rpx;
  border-bottom: none;
  height: 460rpx;
  margin-bottom: 16rpx;
}

.nopic_tasks-card {
  background: #fff;
  box-sizing: border-box;
  font-size: 24rpx;
  border-radius: 16rpx;
  border-bottom: none;
  width: 342rpx;
  height: 460rpx;
  padding: 20rpx;
}

.pic_tasks-card {
  background: #fff;
  box-sizing: border-box;
  font-size: 24rpx;
  border-radius: 16rpx;
  border-bottom: none;
  width: 342rpx;
  height: 460rpx;
}

.tasks-card__main {
  position: relative;
  display: flex;
  line-height: 1;
  padding: 0;
  background: transparent;
  width: 342rpx;
  border-radius: 16rpx 16rpx 16rpx 16rpx;
  align-items: center;
  justify-content: center;
  margin-bottom: 16rpx;
  flex-direction: column;
}

.tasks-card__thumb {
  flex-shrink: 0;
  position: relative;
  width: 340rpx;
  height: 180rpx;
}

.nopic__head {
  flex-shrink: 0;
  position: relative;
  width: 100%;
  height: 55%;
  border-radius: 16rpx 16rpx 0 0;
  background: #fff;
  display: flex;
  flex-direction: column;

}

.head-title {
  font-size: 32rpx;
  color: #333;
  font-weight: 600;
  display: -webkit-box;
  word-break: break-word;
  line-height: 46rpx;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
  height: 100%;
}

.task-title {
  margin-top: 10rpx;
}

.head-avatar-btn {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  height: 100rpx;
  width: 100%;
}

.tasks-card__thumb:empty {
  display: none;
  margin: 0;
}

.tasks-card__img {
  display: block;
  width: 100%;
  height: 100%;
  border-radius: 16rpx 16rpx 0 0;
  overflow: hidden;
}

.tasks-card__body {
  display: flex;
  flex-direction: column;
  background: #fff;
  padding-left: 20rpx;
  padding-right: 20rpx;
  padding-top: 8rpx;
  overflow: hidden;
}

.tasks-card__body-pic {
  display: flex;
  flex-direction: column;
  background: #fff;
  padding-left: 20rpx;
  padding-right: 20rpx;
  padding-top: 16rpx;
  overflow: hidden;
}

.tasks-card__upper {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  height: 104rpx;
}

.tasks-card__condition {
  overflow: hidden;
  display: -webkit-box;
  word-break: break-word;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
  overflow: hidden;
}

.condition {
  margin-left: 10rpx;
}

.tasks-card__title {
  width: 300rpx;
  flex-shrink: 0;
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  word-break: break-word;
  line-height: 32rpx;
}

.tasks-card__tags {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  margin: 8rpx 0 0 0;
}

.tasks-card__tag {
  color: #fa4126;
  background: transparent;
  font-size: 20rpx;
  border: 1rpx solid #fa4126;
  padding: 0 8rpx;
  border-radius: 16rpx;
  line-height: 30rpx;
  margin: 0 8rpx 8rpx 0;
  display: block;
  overflow: hidden;
  white-space: nowrap;
  word-break: keep-all;
  text-overflow: ellipsis;
}

.tasks-card__down {
  display: flex;
  position: relative;
  flex-direction: row;
  justify-content: flex-start;
  align-items: baseline;
  line-height: 32rpx;
  margin: 8rpx 0 0 0;
}

.tasks-card__origin-price {
  white-space: nowrap;
  font-weight: 600;
  order: 2;
  color: #bbbbbb;
  font-size: 24rpx;
  margin: 0 0 0 8rpx;
}

.tasks-card__add-cart {
  order: 3;
  margin: auto 0 0 auto;
  position: absolute;
  bottom: 0;
  right: 0;
}

.spec-for-price {
  font-size: 36rpx;
  white-space: nowrap;
  font-weight: 700;
  order: 1;
  color: #fa4126;
  margin: 0;
}

.spec-for-symbol {
  font-size: 24rpx;
}